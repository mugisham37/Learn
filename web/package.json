{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build --turbo",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "schema:extract": "node scripts/extract-schema.js",
    "schema:validate": "node scripts/validate-schema.js",
    "schema:sync": "node scripts/sync-schema.js sync",
    "schema:watch": "node scripts/sync-schema.js watch",
    "schema:status": "node scripts/sync-schema.js status",
    "codegen": "npm run schema:extract && graphql-codegen --config codegen.yml",
    "codegen:generate": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "codegen:dev": "npm run schema:sync && npm run codegen:watch",
    "config:validate": "node -e \"require('./dist/lib/config').validateConfiguration()\"",
    "config:check": "node -e \"require('./dist/lib/config/monitoring').checkConfigurationHealth().then(console.log)\"",
    "config:test": "npm run config:validate && npm run config:check",
    "env:development": "cp .env.development .env.local",
    "env:staging": "cp .env.staging .env.local",
    "env:production": "cp .env.production .env.local"
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-react-apollo": "^4.3.4",
    "@sentry/nextjs": "^10.32.1",
    "@types/hls.js": "^0.13.3",
    "date-fns": "^4.1.0",
    "graphql": "^16.12.0",
    "graphql-ws": "^6.0.6",
    "hls.js": "^1.6.15",
    "jose": "^6.1.3",
    "next": "16.0.10",
    "node-fetch": "^3.3.2",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/introspection": "^5.0.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "fast-check": "^4.4.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
