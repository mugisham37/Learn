{
  "name": "learning-platform-backend",
  "version": "1.0.0",
  "description": "Production-ready educational learning platform backend built with Node.js, TypeScript, and Fastify",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server": "tsx scripts/start-server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/infrastructure/database/migrate.ts",
    "db:verify": "tsx scripts/verify-migration.ts",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "education",
    "learning-platform",
    "lms",
    "fastify",
    "typescript",
    "graphql",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@aws-sdk/client-mediaconvert": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/cloudfront-signer": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@elastic/elasticsearch": "^8.11.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@sendgrid/mail": "^8.1.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.6",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.1.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.25.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "socket.io": "^4.6.1",
    "stripe": "^14.10.0",
    "winston": "^3.11.0",
    "winston-cloudwatch": "^6.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.6",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.1",
    "drizzle-kit": "^0.20.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
